<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DCCEHANDBOOK" parent="Theme.DCCEHANDBOOK.Base" />

    <!-- No Toolbar theme -->
    <style name="Theme.DCCEHANDBOOK.NoActionBar" parent="Theme.DCCEHANDBOOK.Base">
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Default Theme -->
    <style name="Theme.DCCEHANDBOOK.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_dark</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_on_primary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="toolbarStyle">@style/Theme.DCCEHANDBOOK.Toolbar</item>
        <item name="android:navigationBarColor">@color/background_material_light</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/Theme.DCCEHANDBOOK.Toolbar.DrawerArrowToggle</item>

    </style>

    <!-- Toolbar -->
    <style name="Theme.DCCEHANDBOOK.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/color_on_background</item>
        <item name="colorOnPrimary">@color/color_on_background</item>
        <item name="colorControlNormal">@color/color_on_background</item>
        <item name="colorButtonNormal">@color/color_on_background</item>
        <item name="android:background">@color/color_background</item>
    </style>

    <style name="Theme.DCCEHANDBOOK.Toolbar.DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/color_on_background</item>
    </style>

    <style name="Theme.DCCEHANDBOOK.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DCCEHANDBOOK.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- THIS IS THE MAIN THEME -->
    <style name="AppTheme.Wallpaper" parent="@style/Theme.AppCompat.Light.NoActionBar">

    </style>

</resources>